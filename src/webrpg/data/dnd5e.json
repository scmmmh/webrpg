         "columns": ["Weapon", "Type", "Proficient", "Bonus", "Damage"],
         "rows": [
             {"id": "attacks.%i",
              "multirow": true,
              "columns": [
                  {"id": "%i.name",
                   "data_type": "string",
                   "editable": true,
                   "action": "d20 + {attacks.%(rowid)i.bonus}",
                   "action_target": "setChatMessage",
                   "action_title": "{attacks.%(rowid)i.name}"},
                  {"id": "%i.type",
                   "data_type": "option",
                   "editable": true,
                   "options": ["", "Melee", "Ranged"]},
                  {"id": "%i.proficient",
                   "data_type": "boolean",
                   "editable": true},
                  {"id": "%i.bonus",
                   "data_type": "number",
                   "editable": false,
                   "formula": "{abilities.dex ? attacks.%(rowid)i.type == 'Ranged' : abilities.str} + {base.proficiency ? attacks.%(rowid)i.proficient : 0}"},
                  {"id": "%i.damage",
                   "data_type": "string",
                   "editable": true,
                   "action": "{attacks.%(rowid)i.damage}",
                   "action_target": "setChatMessage",
                   "action_title": "{attacks.%(rowid)i.name} Damage"}
